<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close_black_24dp"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/iv_icon_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_exit"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/tv_title_log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_icon_exit"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_light"
            android:padding="12dp"
            android:text="Do you want to Log out ?"
            android:textSize="18sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_log_out"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:background="@drawable/bg_tv_login"
                android:fontFamily="@font/roboto_light"
                android:text="YES"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:background="@drawable/bg_tv_login"
                android:fontFamily="@font/roboto_light"
                android:text="NO"
                android:textSize="22sp" />
        </TableRow>


    </RelativeLayout>


</layout>